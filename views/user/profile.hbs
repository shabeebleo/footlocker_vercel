<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">User</a></li>
                        <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                            alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">{{userDetails.username}}</h5>

                    </div>
                </div>
                <div class="card mb-4 mb-lg-0">
                    <div class="card-body  p-0">
                        <ul class="list-group list-group-flush rounded-3">
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                                <button class="mb-0 btn btn-danger " data-toggle="modal" data-target="#editProfile">Edit
                                    Profile</button>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                                <button class="mb-0 btn btn-success" data-toggle="modal" data-target="#addAddress">Add
                                    Address</button>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                                <button class="mb-0 btn btn-info" data-toggle="modal" data-target="#changePassword">Edit
                                    Password</button>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                                <a href="/orders" class="mb-0 btn btn-secondary">View orders</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{userDetails.username}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{userDetails.email}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">(097){{userDetails.phone}}</p>
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>
                <div class="row">
                    {{#each userAddress}}
                    <div class="col-md-6">
                        <div class="card mb-4 mb-md-0">
                            <div class="card-body">
                                <p class="mb-4">{{this.name}}
                                </p>
                                <p class="mb-4">{{this.phone}}
                                </p>
                                <p class="mb-4">
                                    {{this.building_Name}}
                                </p>
                                <p class="mb-4">{{this.street_name}},{{this.city}},{{this.district}},{{this.pincode}}
                                </p>

                                <div>
                                    <button onclick="currentAddress('{{../userDetails._id}}','{{this.addId}}')"
                                        data-toggle="modal" data-target="#editAddress"
                                        class="btn btn-info">Edit</button>
                                    <button onclick="deleteAddress('{{../userDetails._id}}','{{this.addId}}')"
                                        class="btn ">Delete</button>
                                </div>


                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    </div>




    <!-- Button trigger modal -->

    <!-- Modal edit profile -->
    <div class="modal fade" id="editProfile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/editProfile/{{userDetails._id}}" method="post">
                        <div class="form-group">
                            <label for="formGroupExampleInput">Name</label>
                            <input type="text" name="name" value="{{userDetails.username}}" class="form-control"
                                id="formGroupExampleInput" placeholder="Name">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>


    <!-- Modal edit Password -->
    <div class="modal fade" id="changePassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Change Password</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/changePassword/{{userDetails._id}}" method="post">
                        <div class="form-group">
                            <label for="formGroupExampleInput">Current Password</label>
                            <input type="password" name="currentPassword" value="" class="form-control"
                                id="formGroupExampleInput" placeholder="password">
                            <label for="formGroupExampleInput">New Password</label>
                            <input type="password" name="newPassword" value="" class="form-control"
                                id="formGroupExampleInput" placeholder="password">
                            <label for="formGroupExampleInput">Confirm Password</label>
                            <input type="password" name="confirmPassword" value="" class="form-control"
                                id="formGroupExampleInput" placeholder="password">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- Modal add address -->

    <div class="modal fade" id="addAddress" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/addAddress/{{userDetails._id}}" id="add_Address" method="post">
                        <div class="form-group">
                            <label for="formGroupExampleInput">Name</label>
                            <input type="text" name="name" value="" class="form-control" id="formGroupExampleInput"
                                placeholder="Full Name">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Phone </label>
                            <input type="Tel" name="phone" value="" class="form-control" id="formGroupExampleInput"
                                placeholder="Phone Number">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Building Name</label>
                            <input type="text" name="building_Name" value="" class="form-control"
                                id="formGroupExampleInput" placeholder="Building Name">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Street Name</label>
                            <input type="text" name="street_name" value="" class="form-control"
                                id="formGroupExampleInput" placeholder="Street Name">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">City</label>
                            <input type="text" name="city" value="" class="form-control" id="formGroupExampleInput"
                                placeholder="City ">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">District</label>
                            <input type="text" name="district" value="" class="form-control" id="formGroupExampleInput"
                                placeholder="District">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">State</label>
                            <input type="text" name="state" value="" class="form-control" id="formGroupExampleInput"
                                placeholder="State ">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Pincode</label>
                            <input type="text" name="pincode" value="" class="form-control" id="formGroupExampleInput"
                                placeholder="Pincode ">
                        </div>


                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    {{!-- modal edit address --}}

    <div class="modal fade" id="editAddress" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="" id="editaddress-form" method="">
                        <div class="form-group">
                            <label for="formGroupExampleInput">Name</label>
                            <input type="text" name="name" value="" class="form-control" id="name"
                                placeholder="Full Name">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Phone </label>
                            <input type="Tel" name="phone" value="" class="form-control" id="phone"
                                placeholder="Phone Number">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Building Name</label>
                            <input type="text" name="building_Name" value="" class="form-control" id="building_Name"
                                placeholder="Building Name">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Street Name</label>
                            <input type="text" name="street_name" value="" class="form-control" id="street_name"
                                placeholder="Street Name">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">City</label>
                            <input type="text" name="city" value="" class="form-control" id="city" placeholder="City ">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">District</label>
                            <input type="text" name="district" value="" class="form-control" id="district"
                                placeholder="District">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">State</label>
                            <input type="text" name="state" value="" class="form-control" id="state"
                                placeholder="State ">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Pincode</label>
                            <input type="number" name="pincode" value="" class="form-control" id="pincode"
                                placeholder="Pincode ">
                        </div>
                        <input type="text" name="userId" id="" value="{{userDetails._id}}" hidden>
                        <input type="text" name="addressId" id="addressId" value="" hidden>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <script>

        function deleteAddress(userId, addressId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/deleteAddress',
                        data: {
                            user: userId,
                            addressId: addressId
                        },
                        method: 'post',
                        success: (response) => {
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            )
                            location.reload()
                        }
                    })

                }
            })


        }

        function currentAddress(userId, addressId) {
            $.ajax({
                url: '/currentAddress',
                data: {
                    user: userId,
                    addressId: addressId
                },
                method: 'post',
                success: (response) => {
                    document.getElementById('name').value = response.name
                    document.getElementById('phone').value = response.phone
                    document.getElementById('building_Name').value = response.building_Name
                    document.getElementById('street_name').value = response.street_name
                    document.getElementById('district').value = response.district
                    document.getElementById('state').value = response.state
                    document.getElementById('pincode').value = response.pincode
                    document.getElementById('city').value = response.city
                    document.getElementById('addressId').value = response.addId


                }
            })
        }

        $("#editaddress-form").submit((e) => {
            e.preventDefault()
            $.ajax({
                url: '/editaddress',
                method: 'post',
                data: $('#editaddress-form').serialize(),
                success: ((response) => {
                    if (response) {
                        Swal.fire('address edited', 'success')
                        setTimeout(() => {
                            location.reload()
                        }, 500)

                    }
                })
            })
        })

            $("#add_Address").validate({
                rules: {
                    name: {
                        required: true, minlength: 3
                    },
                    phone: {
                        required: true, minlength: 10
                    },
                    building_Name: {
                        required: true, minlength: 3
                    },
                    street_name: {
                        required: true, minlength: 3
                    },
                    city: {
                        required: true, minlength: 3
                    },
                    district: {
                        required: true, minlength: 3
                    },
                    state: {
                        required: true, minlength: 3
                    },
                    pincode: {
                        required: true, minlength: 6
                    }
                }
            })
      





    </script>
    
</section>